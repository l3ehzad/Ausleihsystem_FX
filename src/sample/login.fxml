<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="loginBackground" prefHeight="600.0" prefWidth="1024.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.LoginController">
   <children>
      <ImageView fitHeight="279.0" fitWidth="492.0" layoutX="69.0" layoutY="112.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Images/LogoLogin.png" />
         </image>
      </ImageView>
      <TextField fx:id="logUsername" layoutX="734.0" layoutY="224.0" promptText="DSHS-ID or Username" />
      <Label fx:id="loginLabel" layoutX="733.0" layoutY="198.0" prefHeight="18.0" prefWidth="290.0" text="Ausleihsystem Login" textAlignment="CENTER">
         <font>
            <Font name="Verdana" size="14.0" />
         </font>
      </Label>
      <PasswordField fx:id="logPassword" layoutX="734.0" layoutY="274.0" promptText="Password" />
      <Button fx:id="loginButton" layoutX="837.0" layoutY="317.0" mnemonicParsing="false" onAction="#handleLoginAction" text="Login" />
   </children>
</AnchorPane>
